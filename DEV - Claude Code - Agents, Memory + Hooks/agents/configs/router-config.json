{
  "description": "Configuration for claude-code-router MCP integration",
  "Router": {
    "default": "anthropic,claude-opus-4",
    "simple_tasks": "kimi,kimi-pro",
    "background": "ollama,qwen2.5-coder:latest",
    "analysis": "anthropic,claude-opus-4"
  },
  "Transformers": {
    "kimi": {
      "type": "kimi-transformer",
      "config": {
        "api_key": "${KIMI_API_KEY}",
        "model": "moonshot-v1-32k",
        "base_url": "https://api.moonshot.cn/v1",
        "max_tokens": 32000
      }
    },
    "ollama": {
      "type": "ollama-transformer",
      "config": {
        "base_url": "http://localhost:11434",
        "model": "qwen2.5-coder:latest",
        "max_tokens": 32000
      }
    }
  },
  "RouteRules": {
    "complexity_thresholds": {
      "trivial": {
        "max_score": 3,
        "preferred_model": "kimi-pro"
      },
      "simple": {
        "max_score": 5,
        "preferred_model": "kimi-pro"
      },
      "medium": {
        "max_score": 8,
        "preferred_model": "claude-opus-4"
      },
      "complex": {
        "max_score": 12,
        "preferred_model": "claude-opus-4"
      },
      "critical": {
        "max_score": 999,
        "preferred_model": "claude-opus-4"
      }
    },
    "task_type_overrides": {
      "architecture": "claude-opus-4",
      "design": "claude-opus-4",
      "synthesis": "claude-opus-4",
      "security": "claude-opus-4",
      "search": "kimi-pro",
      "read": "kimi-pro",
      "edit": "kimi-pro"
    }
  },
  "CostTracking": {
    "enabled": true,
    "alert_threshold": 1.0,
    "daily_limit": 50.0,
    "log_path": ".claude/agents/logs/cost-tracking.json"
  },
  "Performance": {
    "cache_enabled": true,
    "cache_ttl": 300,
    "parallel_requests": true,
    "max_parallel": 3
  }
}